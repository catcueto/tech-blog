{{#each posts as |post|}}
<div class="card mx-auto my-3 py-3 text-center col-10 col-md-8">
  <div class="card-header">
    <h2 class="general-post-title">All Blog Posts</h2>
    <div class="post">
      <h3>
        <a class="text-dark" href="/post/{{post.id}}">
          {{post.title}}
        </a>
      </h3>
      <p class="date-user">Posted by {{post.user.username}} on {{format_date postDate}}</p>
      <p class="post-content font-weight-light">{{dateTime post.createdAt}}</p>
    </div>
  </div>
  {{/each}}
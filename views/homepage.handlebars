{{#each posts as |post|}}
  <div class="card">
    <div class="row align-center mb-5">
      <div class="col-md-12 blog_top">
        <h3 class="blogTitle">
          <a class="text-dark" href="/post/{{post.id}}">
            {{post.title}}
          </a>
        </h3>
        <p class="date-user">Posted by {{post.user.username}}</p>
        <p class="post-content font-weight-light">on
          {{dateTime post.createdAt}}</p>
      </div>
    </div>
  </div>
{{/each}}
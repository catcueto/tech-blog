<div class="row">
  <div class="col-md-6">
    <h2>Login</h2>
    <div class="row">
      <form class="col s12 login-form">
        <div class="row">
          <div class="input-field col s6">
            <i class="material-icons prefix">account_circle</i>
            <input id="username-login" type="text" class="validate" />
            <label for="username-login">username</label>
          </div>
          <div class="input-field col s6">
            <i class="material-icons prefix">lock_outline</i>
            <input id="password-login" type="tel" class="validate" />
            <label for="password-login">password</label>
          </div>
          <div class="form-group">
            <button id="login-btn" class="btn btn-primary" type="submit">Login</button>
          </div>
        </div>
      </form>
    </div>

    <br>
    <a class="form-label" href="/signup">Sign up instead</a>
  </div>

  <script src="/public/js/login.js"></script>
  <script src="/public/js/signup.js"></script>
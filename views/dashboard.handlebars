<div class="row align-center mb-5" id="dashboard">

  <form class="newPostForm">
    <div class="form-group col-md-12">
      <input
        type="text"
        class="form-control"
        id="postTitle"
        placeholder="Add Title"
      />
    </div>

    <div class="form-group col-md-12 blog_bottom">
      <label for="formGroupExampleInput2">{{post.post_content}}</label>
      <input
        type="text"
        class="form-control"
        id="postContent"
        placeholder="Add Post"
      />
    </div>
    <button
      type="submit"
      class="col-md-12 btn btn-dark postBlog"
    >Submit</button>
  </form>

  {{#each posts as |post|}}

    <div class="row align-center mb-5">

      <div class="col-md-12 blog_top">
        <h3 class="postTitle">
          <a href="/post/{{post.id}}"> {{post.post_title}} </a></h3>

        <p class="user_time">Posted by
          {{post.user_id}}
          on
          {{post.post_date}}</p>
      </div>

      <div class="col-md-12 postContent">
        <p>{{post.post_content}}</p>
      </div>
    </div>

  {{/each}}

</div>
<script src="/js/post.js"></script>
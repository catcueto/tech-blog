<div class="row align-center mb-5" id="dashboard">

  <form class="newPostForm">
    <div class="form-group col-md-12">
      <input
        type="text"
        class="form-control"
        id="postTitle"
        placeholder="Edit Title"
      />
    </div>

    <div class="form-group col-md-12 blog_bottom">
      <label for="formGroupExampleInput2">{{post.post}}</label>
      <input
        type="text"
        class="form-control"
        id="postContent"
        placeholder="Edit Post"
      />
    </div>
    <button type="submit" class="col-md-12 btn btn-dark postBlog">Edit</button>
  </form>

  {{#each user as |user|}}

    <div class="row align-center mb-5">

      <div class="col-md-12 blog_top">
        <h3 class="blogTitle">
          <a href="/post/{{user.id}}"> {{user.postTitle}} </a></h3>

        <p class="user_time">Posted by
          {{user.user.username}}
          on
          {{format_date user.postDate}}</p>
      </div>

      <div class="col-md-12 blogContent">
        <p>{{user.post}}</p>
      </div>
    </div>

  {{/each}}

</div>
<script src="/js/post.js"></script>